{{#unless arrangedContent.length}}
	<div class="centered error">
		<h3>Hold it right there</h3>
		<p>
			Looks like you stumbled upon a new tag. <br /><br />
			Wait for a moment while we search for this tag. Refresh see if we found anything.
		</p>
	</div>
{{/unless}}
{{#each video in arrangedContent}}
	{{#view Vine.VideoBoxView}}
	<div class="video">
		<video loop preload="auto" class="centered" {{bindAttr src="video.url"}}></video>
		
		<div class="centered tags">
			{{#if video.tags}}
				{{#each tag in video.tags}}
					<a href="{{unbound tag}}"> {{tag}} </a>
				{{/each}}
			{{else}}
				{{video.caption}}
			{{/if}}
			{{#linkTo "video" video}}<img src="assets/glyphicons_223_chevron-right.png" />{{/linkTo}}
		</div>
	</div>
	{{/view}}
{{/each}}